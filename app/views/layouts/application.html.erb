<!DOCTYPE html>
<html>
  <head>
    <title>Schwamit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if user_signed_in? %>
          <li> <%= link_to 'Sign Out', destroy_user_session_path %> </li>
        <% else %>
          <li> <%= link_to 'Sign Up', new_user_registration_path %> </li>
        <% end %>
      </ul>
    </nav>
    <% if flash[:notice] %>
      <h2><%= flash.notice %></h2>
    <% end %>
    <%= yield %>
  </body>
</html>
